<mapper namespace="adminTestMapper">
	
	<!-- 무슨 쿼리 -->
	<select id="getTestCount" resultType="int">
		SELECT COUNT(*) FROM tbl_test
		<trim prefix="WHERE" prefixOverrides="AND">
			<if test="searchKeyword != null">
				${searchOption} LIKE '%' || #{searchKeyword}||'%'
			</if>
			<if test="type != null">
				AND type = ${type}
			</if>
		</trim>
	</select>


</mapper>