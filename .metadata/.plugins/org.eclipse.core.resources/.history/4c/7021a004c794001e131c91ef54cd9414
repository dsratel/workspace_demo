				                                        <c:if test="${masteryn eq 'y'.charAt(0)}">		
				                                            <td><button type="button" class="btn btn-danger" onclick="delArticle(${dto.seq},${dto.pid},'${dto.attachfile}','${dto.commentcnt > 0 ? 'y' : 'n'}')">삭제</button></td>
				                                        </c:if>
				                                    </tr>
				                                </c:forEach>
				                            </c:when>
